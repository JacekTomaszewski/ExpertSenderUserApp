@using ExpertSenderUserApp.Web.Enums
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mt-3 text-center">@ViewBag.PageTitle</h1>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
            @if (ViewBag.IsEditMode)
            {
                <form class="mt-3" method="post" asp-controller="User"
                      asp-action="@((UserModeEnum)ViewBag.UserModeEnum == UserModeEnum.Create ? "CreateNewUser" : "EditUser")">
                    <input type="hidden" name="id" value="@Model?.Id" />
                    <input type="hidden" name="dateCreated" value="@Model?.DateCreated" />
                    <div class="form-group mt-3">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" aria-describedby="firstNameHelp" placeholder="Enter first name" value="@Model?.FirstName" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" aria-describedby="lastNameHelp" placeholder="Enter last name" value="@Model?.LastName" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email" value="@Model?.Email" required>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group mt-3">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3">@Model?.Description</textarea>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </div>
                </form>

            }
            else
            {
                <div class="mt-3">
                    <label>First Name:</label>
                    <span>@Model.FirstName</span>
                </div>
                <div class="mt-3">
                    <label>Last Name:</label>
                    <span>@Model.LastName</span>
                </div>
                <div class="mt-3">
                    <label>Email address:</label>
                    <span>@Model.Email</span>
                </div>
                <div class="mt-3">
                    <label>Description:</label>
                    <span>@Model.Description</span>
                </div>

            }
        </div>
    </div>
</div>